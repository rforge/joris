<?xml version="1.0" encoding="UTF-8"?>
<frame size="800,600" defaultCloseOperation="JFrame.EXIT_ON_CLOSE">
	<menubar>
		<menu text="File">
			<menuitem text="New" />
			<menuitem text="Send" />
			<menuitem text="Close" />
			<separator />
			<menuitem text="Quit" id="quit" />
		</menu>
		<menu text="Edit">
			<menuitem text="Cut" accelerator="meta X" />
			<menuitem text="Copy" accelerator="meta C" />
			<menuitem text="Paste" accelerator="meta V" />
		</menu>
	</menubar>

	<panel layout="BorderLayout">
		<splitpane orientation="JSplitPane.VERTICAL_SPLIT"
			dividerLocation="0.5" dividerSize="5">
			<scrollpane height="500" PreferredSize="800,500"
				HorizontalScrollBarPolicy="JScrollPane.HORIZONTAL_SCROLLBAR_NEVER"
				VerticalScrollBarPolicy="JScrollPane.VERTICAL_SCROLLBAR_AS_NEEDED">
				<editorpane id="protocol" Editable="false" MinimumSize="320,200" PreferredSize="800,500">
				</editorpane>
			</scrollpane>
			<textarea id="input">
			</textarea>
		</splitpane>
	</panel>
</frame>