<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean name="shellContext" class="org.rosuda.util.process.TestShellContext">
		<constructor-arg index="0"> 
			<props>
				<prop key="RSERVE_SOCKET">/tmp/ux_rservesocket</prop>
			</props>
		</constructor-arg>
	</bean>

	<bean name="rConnectionFactory" class="org.rosuda.rengine.REngineConnectionFactory"
		factory-method="getInstance" />

	<bean name="setup_rStarterFactory" class="org.rosuda.util.r.impl.RStartContext">
		<property name="connectionFactory" ref="rConnectionFactory" />
		<property name="shellContext" ref="shellContext"/>
	</bean>

	<bean name="rStarterFactory" class="org.rosuda.util.r.impl.RStarterFactory">
		<property name="context" ref="setup_rStarterFactory" />
	</bean>

	<bean name="rStarterProcess" class="org.rosuda.util.process.ProcessService"
		factory-bean="rStarterFactory" factory-method="createService" />
</beans>
